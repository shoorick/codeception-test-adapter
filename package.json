{
  "name": "codeception-test-adapter",
  "displayName": "Codeception Test Adapter",
  "description": "VSCode compatible test adapter for Codeception",
  "version": "0.1.0",
  "icon": "icon.png",
  "publisher": "shoorick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shoorick/codeception-test-adapter.git"
  },
  "homepage": "https://github.com/shoorick/codeception-test-adapter",
  "bugs": {
    "url": "https://github.com/shoorick/codeception-test-adapter/issues"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Codeception Test Adapter",
      "properties": {
        "codeceptionTestAdapter.codeceptPath": {
          "type": "string",
          "default": "",
          "description": "Path to Codeception executable. Leave empty to auto-detect (vendor/bin/codecept, then codecept from PATH). Relative paths are resolved from the workspace folder.",
          "scope": "resource"
        },
        "codeceptionTestAdapter.reportPath": {
          "type": "string",
          "default": "tests/_output/report.xml",
          "description": "Path to JUnit XML report produced by Codeception (--xml). Relative paths are resolved from the workspace folder.",
          "scope": "resource"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "vsix": "npx vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.3"
  }
}
